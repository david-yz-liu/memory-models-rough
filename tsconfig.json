{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "es2015",
        "moduleResolution": "bundler",
        "noEmit": false, // Overrides noEmit from @docusaurus/tsconfig
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es2020"
    },
    "extends": "@docusaurus/tsconfig",
    "include": ["./src/**/*"],
    "types": ["node"]
}
