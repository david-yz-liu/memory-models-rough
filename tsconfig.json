{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "es2015",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es2020"
    },
    "include": ["./src/**/*"],
    "types": ["node"]
}
